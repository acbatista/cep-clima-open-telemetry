# Chave de API do Weather API (substitua pela sua chave real)
WEATHER_API_KEY=

# Portas dos serviços
SERVICE_A_PORT=8080
SERVICE_B_PORT=8081

# URLs dos serviços (para desenvolvimento local)
SERVICE_A_URL=http://localhost:8080
SERVICE_B_URL=http://service-b:8081

# Configurações do OpenTelemetry
OTEL_COLLECTOR_URL=otel-collector:4317
OTEL_SERVICE_NAME_A=service-a
OTEL_SERVICE_NAME_B=service-b

# Timeouts e configurações de rede
HTTP_TIMEOUT=10s
RETRY_ATTEMPTS=3
RETRY_DELAY=1s

# Configurações de log
LOG_LEVEL=info